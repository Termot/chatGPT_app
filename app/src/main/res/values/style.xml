<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- ... другие атрибуты ... -->

        <!-- Цвет текста в Toolbar -->
        <item name="android:textColorPrimary">#888888</item>

        <!-- Цвет кнопки в Toolbar -->
        <item name="android:colorControlNormal">#FFFFFF</item>
    </style>
    <style name="MenuButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_marginStart">8dp</item> <!-- Отступ слева -->
        <item name="android:layout_marginTop">8dp</item> <!-- Отступ сверху -->
        <item name="android:layout_marginEnd">8dp</item> <!-- Отступ справа -->
        <item name="android:layout_marginBottom">8dp</item> <!-- Отступ снизу -->
        <item name="android:textSize">16sp</item> <!-- Размер текста -->
        <item name="android:textAllCaps">false</item> <!-- Отключить заглавный текст -->
    </style>
    <style name="ChatMessageTextSender">
        <item name="android:textSize">16sp</item> <!-- Размер текста -->
        <item name="android:textColor">#FFFFFF</item> <!-- Цвет текста -->
        <item name="android:padding">12dp</item> <!-- Внутренний отступ текста -->
    </style>

    <style name="ChatMessageTextReceiver">
        <item name="android:textSize">16sp</item> <!-- Размер текста -->
        <item name="android:textColor">#FFFFFF</item> <!-- Цвет текста -->
        <item name="android:padding">12dp</item> <!-- Внутренний отступ текста -->
    </style>
    <style name="ChatMessageErrorTextReceiver">
        <item name="android:textSize">16sp</item> <!-- Размер текста -->
        <item name="android:textColor">#FF9999</item> <!-- Цвет текста -->
        <item name="android:padding">12dp</item> <!-- Внутренний отступ текста -->
    </style>
    <style name="ChatEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item> <!-- Удалить фон -->
        <item name="android:paddingStart">16dp</item> <!-- Отступ слева -->
        <item name="android:paddingEnd">16dp</item> <!-- Отступ справа -->
        <item name="android:paddingTop">12dp</item> <!-- Отступ сверху -->
        <item name="android:paddingBottom">12dp</item> <!-- Отступ снизу -->
        <item name="android:hint">Введите сообщение...</item> <!-- Подсказка -->
        <item name="android:textColorHint">#999999</item> <!-- Цвет подсказки -->
        <item name="android:textColor">#FFFFFF</item> <!-- Цвет текста сообщения -->
        <item name="colorControlNormal">#5C5C66</item>
    </style>
</resources>